<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:ez="clr-namespace:EZAppMaker.Components"
             xmlns:view="clr-namespace:EZAppMaker"
             x:DataType="view:EZActivityIndicator"
             x:Class="EZAppMaker.EZActivityIndicator"
             Background="{StaticResource EZModalFader}">

    <ContentView.Content>
        <Grid StyleClass="EZGridStyle">
            <ez:EZSpinner x:Name="Spinner" Size="48" HorizontalOptions="Center" VerticalOptions="Center"/>
        </Grid>
    </ContentView.Content>

</ContentView>